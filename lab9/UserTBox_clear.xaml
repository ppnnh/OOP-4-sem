<UserControl x:Class="lab6_7.UserTBox_clear"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lab6_7"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="450">
    <Grid>
        <TextBox x:Name="userTBox" Width="auto" Height="20">
        </TextBox>
        <Button x:Name="buttonTBox"
                BorderThickness="0" 
                Content="&#xE10A;"
                Width="30" Height="20"
                HorizontalAlignment="Right"
                Margin="0,0,0,0"
                FontSize="10"
                FontFamily="Segoe UI Symbol"
                Background="Transparent" Click="buttonTBox_Click"></Button>

    </Grid>
</UserControl>
